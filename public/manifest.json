{
  "manifest_version": 3,
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_desc__",
  "version": "0.3.0",
  "icons": {
    "16": "icon/icon_16.png",
    "128": "icon/icon_128.png"
  },
  "default_locale": "en",
  "action": {
    "default_icon": {
      "19": "icon/icon_19.png",
      "38": "icon/icon_38.png"
    },
    "default_title": "__MSG_ext_name__",
    "default_popup": "popup.html"
  },
